    <!-- map --> 
    <div id="map"></div>
    
    <script> //script is for before a run is made
    //disable buttons that can't be used    
    document.getElementById("stopRecord").disabled = true;
    document.getElementById("clearRoute").disabled = true;
    document.getElementById("saveRoute").disabled = true;    
    //this function will display a map with the current position before the run starts    
    function initialise() {
        
          navigator.geolocation.getCurrentPosition(current);
          
           // making center current position
          function current(position){
            var latitude = position.coords.latitude;
            var longitude = position.coords.longitude;
            var myLatLng = {lat: latitude, lng: longitude};
              
            var mapCanvas = document.getElementById('map');
            var mapOptions = {
              center: {lat:latitude, lng:longitude},
              zoom: 18,
              mapTypeId: google.maps.MapTypeId.ROADMAP
            }
            var map = new google.maps.Map(mapCanvas, mapOptions)
            var marker = null;
            //creating marker
               marker = new google.maps.Marker({
               position: myLatLng,
               map: map
               title: 'Starting point'
               });
    if document.getElementById("stopRecord").disabled = true;
      // program is recording, marker will move
      marker.setPosition(myLatLng);
    }
    else {
      // Marker stop ( create new marker at ending point)
        marker = new google.maps.Marker({
        position: newPoint,
        map: map
        title: 'Ending point'
        });
    }

  }); 

  // Call the autoUpdate() function every 1 seconds
  setTimeout(autoUpdate, 1000);
}

autoUpdate();
            }
      }
         
      // To add the marker to the map, call setMap();
      marker.setMap(map);    
      //adding the map    
      google.maps.event.addDomListener(window, 'load', initialise); 
      
      
      
    </script>  

    <script async defer
  src="https://maps.googleapis.com/maps/api/js?v=3&amp;key=&amp;callback=initialise">
    </script>

